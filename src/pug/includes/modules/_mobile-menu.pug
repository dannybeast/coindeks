// Mobile menu
+b.mobile-menu
    +e.top 
        //-include ./_lang

        if pageType != 'profile'
            // If not auth
            +b.A(href="login.html" class="btn --white --small")
                    span Login
                    +icon('001-key-with-hole')

            +b.A(href="register.html" class="btn --primary --small")
                span Register
                +icon('002-user')
        else 
            // If auth
            +b.A(href="profile-account.html" class="btn --primary --small")
                +icon('002-user')
                span Username123

    if pageType === 'profile'
        // If Auth
        +e.NAV.nav 
            +e.UL
                +e.LI(class=( pageName === "deposits" ? " is-active" : undefined))
                    +e.A(href="profile-deposits.html") Deposits
                +e.LI(class=( pageName === "withdraw" ? " is-active" : undefined)) 
                    +e.A(href="profile-withdraw.html") Withdraw
                +e.LI(class=( pageName === "referral-program" ? " is-active" : undefined)) 
                    +e.A(href="profile-referral.html") Referral	program
                +e.LI(class=( pageName === "settings" ? " is-active" : undefined)) 
                    +e.A(href="profile-settings.html") Settings	

    +e.NAV.nav 
        ul
            li(class=( pageName === "products" ? " is-active" : undefined))
                a(href="products.html") Products 
                ul 
                    li 
                        a(href="#") Desktop Wallet
                    li 
                        a(href="#") Mobile Wallet
                    li 
                        a(href="#") Trezor Hardware Wallet
                        
            li(class=( pageName === "support" ? " is-active" : undefined))
                a(href="support.html") Support
            
            li(class=( pageName === "company" ? " is-active" : undefined))
                a(href="company.html") Company
            
            li(class=( pageName === "bounty" ? " is-active" : undefined))
                a(href="bounty.html") Bounty

    include ./_social