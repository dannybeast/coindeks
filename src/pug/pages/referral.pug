block content

    //
    +b.SECTION.referral-intro
        //-include ../includes/modules/_social
        .container
            +e.row 
                +e.col
                    +e.media 
                        img(src="assets/images/referral/intro.png", alt="")
                +e.col
                    +e.content
                        +e.H1.title Earnings without investing!
