extends ../layout/login

block variables
    - var title = 'Coindeks – Регистрация';
    - var description = '';
    - var pageName = 'register';

block content

    +b.sign 
        +e.top 
            +e.H1.title Регистрация <span class="color-primary">Coindeks.com</span>

        +e.content
            // 
            form
                //
                +e.row 

                    +e.col(class="--12")
                        +b.field(class="--error")
                            label Имя: 
                            input(type="text" name="username")
                            
                    +e.col(class="--12")
                        +b.field 
                            label Выберите страну:
                            +e.choose-group
                                input(type="text" name="country")
                                +e.choose-button
                                    +icon('dots')
                    +e.col(class="--12")
                        +b.field 
                            label Логин: 
                            input(type="text" name="login")

                    +e.col 
                        +b.field 
                            label Email
                            input(type="text" name="email")
                    +e.col 
                        +b.field 
                            label Введите e-mail еще раз:
                            input(type="text" name="retype_email")

                    +e.col 
                        +b.field 
                            label Введите пароль: 
                            input(type="password" name="password")

                    +e.col 
                        +b.field 
                            label Введите пароль еще раз:
                            input(type="password" name="retype_password")

                    +e.col
                        +b.field 
                            label Придумайте Pin-code: 
                            input(type="text" name="pincode")
                    +e.col
                        +b.field 
                            label Введите Pin-code еще раз:
                            input(type="text" name="retype_pincode")

                    +e.col(class="--12")
                        +b.LABEL.checkbox 
                            input(type="checkbox" name="agree")
                            span Согласится с <a href="terms.html">условиями</a> Coindeks.com
                
                //
                +e.footer
                    +b.BUTTON( class="btn --primary") Продолжить
                    p Уже есть аккаунт? <a href="login.html">Авторизация</a>

block script
  //-script(src="assets/js/vendors.js")
  script(src="assets/js/app.js")