extends ../layout/login

block variables
    - var title = 'Coindeks – Восстановление пароль';
    - var description = '';
    - var pageName = 'login';

block content

    +b.sign 
        +e.top 
            +e.H1.title Восстановление пароля <span class="color-primary">Coindeks.com</span>
                
        +e.content
            // 
            form
                //
                +e.row 
                
                    +e.col(class="--12") 
                        +b.field(class="--error")
                            label E-mail 
                            input(type="text" name="email")

                    +e.col(class="--12") 
                        .captcha-wrapper
                            +b.field 
                                label Введите капчу
                                input(type="password" name="captcha")

                            +b.captcha 
                                p 2JFGS75
        
                //
                +e.footer
                    +b.BUTTON( class="btn --primary") Продолжить
                
                +e.footer
                    +e.A(href="login.html" class="link") Войти в аккаунт
                    p Еще нет аккаунта? <a href="register.html">Зарегистрироваться!</a>

block script
  //-script(src="assets/js/vendors.js")
  script(src="assets/js/app.js")